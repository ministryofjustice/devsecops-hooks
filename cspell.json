{
  "ignorePaths": [
    "**/node_modules/**",
    "prek/**",
    "**/*.drawio",
    "**/*.svg",
    "**/requirements.txt"
  ],
  "language": "en",
  "noConfigSearch": true,
  "allowCompoundWords": true,
  "words": [
    "Abhi",
    "AKIA",
    "baprs",
    "cves",
    "glpat",
    "Markan",
    "OCTO",
    "OSSF",
    "prek",
    "SARIF"
  ],
  "dictionaries": [
    "en-gb",
    "companies",
    "softwareTerms",
    "misc",
    "lorem-ipsum",
    "typescript",
    "node",
    "bash",
    "npm"
  ],
  "languageSettings": [
    {
      "languageId": "commit-msg",
      "ignoreRegExpList": ["/^#.*/gm"]
    }
  ],
  "version": "0.2"
}
