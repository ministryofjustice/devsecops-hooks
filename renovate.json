{
    "extends": [
        "config:base"
    ],
    "dependencyDashboard": true,
    "pre-commit": {
        "enabled": true
    },
    "packageRules": [
        {
            "matchManagers": [
                "github-actions"
            ],
            "fileMatch": [
                "^\\.github/**/.*\\.yml$"
            ],
            "groupName": "renovate: github-actions"
        },
        {
            "matchManagers": [
                "pre-commit"
            ],
            "groupName": "renovate: pre-commit"
        },
        {
            "matchDatasources": [
                "docker"
            ],
            "groupName": "renovate: docker"
        },
        {
            "matchDatasources": [
                "npm"
            ],
            "groupName": "renovate: npm"
        }
    ]
}